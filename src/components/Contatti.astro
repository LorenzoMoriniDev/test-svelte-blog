---
// src/components/Contatti.astro
const email = "studionannipierifrancesco@gmail.com";
const telefono = "+39 340 546 1880";
---
<section id="contact">
  <div class="container">
    <h2>Contatti e Sedi</h2>
    <p class="section-subtitle">
      Ricevo su appuntamento a Livorno e Pisa. Contattami per valutare insieme il percorso pi√π adatto alle tue esigenze.
    </p>
    
    <div class="contact-layout">
      
      <!-- Colonna Sinistra: Contatti Diretti -->
      <div class="contact-details">
        <h3>Recapiti</h3>
        <p>
          <strong>Telefono:</strong><br/>
          <a href={`tel:${telefono.replace(/\s/g, '')}`}>{telefono}</a>
        </p>
        <p>
          <strong>Email:</strong><br/>
          <a href={`mailto:${email}`}>{email}</a>
        </p>
        <p>
          <strong>Orari:</strong><br/>
          <span>Si riceve su appuntamento</span>
        </p>
      </div>

      <!-- Colonna Destra: Sedi Operative -->
      <div class="contact-locations">
        <h3>Dove Ricevo</h3>
        
        <div class="location-box">
          <h4>Studio Livorno</h4>
          <address>
            Via Accademia Labronica 9<br>
            (Presso Studi Medici)
          </address>
        </div>

        <br>

        <div class="location-box">
          <h4>Studio Pisa</h4>
          <address>
            Piazza San Silvestro 7A<br>
            Pisa
          </address>
        </div>
      </div>

    </div>
  </div>
</section>
