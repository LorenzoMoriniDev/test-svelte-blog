---
// src/components/Footer.astro
const p_iva = "12345678901";
const email = "info@email.it";
const telefono = "+391234567890";
const indirizzo = "Via Roma 1, 00100 Roma (RM)";
---
<footer>
  <div class="footer-content">
    <div class="footer-contact">
      <p><strong>P.IVA:</strong> {p_iva}</p>
      <p><strong>Indirizzo:</strong> {indirizzo}</p>
      <p>
        <strong>Email:</strong> <a href={`mailto:${email}`}>{email}</a> | 
        <strong>Telefono:</strong> <a href={`tel:${telefono}`}>{telefono}</a>
      </p>
    </div>
  
    <hr />
  
    <div class="footer-social">
      <p>Link Social Media qui</p>
    </div>
  
    <div class="footer-legal">
      <a href={`${import.meta.env.BASE_URL}/privacy-policy/`}>Privacy Policy</a> | 
      <a href={`${import.meta.env.BASE_URL}/cookie-policy/`}>Cookie Policy</a>
      <p>&copy; {new Date().getFullYear()} Nome Cognome. Tutti i diritti riservati.</p>
    </div>
  </div>
</footer>
